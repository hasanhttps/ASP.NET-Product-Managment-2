@model Product

<form asp-action="AddProduct">

    <img src=@((Model.ImageUrl != null) ? @Model.ImageUrl : "") height="100" width="100" style="object-fit: cover; border-radius: 8px;"/>
    <div class="form-group">
        <label for="productimg">Product Image</label>
        <input type="url" asp-for="ImageUrl" class="form-control" id="productimg" aria-describedby="imageHelp" placeholder="Enter product image url">
        <small id="imageHelp" class="form-text text-muted">Paste the image url to this area.</small>
    </div>
    <div class="form-group">
        <label for="productname">Product Name</label>
        <input type="text" asp-for="Name" class="form-control" id="productname" placeholder="Enter product name">
    </div>
    <div class="form-group">
        <label for="productprice">Product Price</label>
        <input type="number" asp-for="Price" class="form-control" id="productprice" placeholder="Enter product price">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

</form>